<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Generic header for desktop -->
			<cms:desktop>
				<cms:template file="stock/header_generic.xml">
					<param name="fixed" value=""/>
					<param name="menu" value="parts/menu_items.xml"/>
					<param name="logo_sprite_icon" value="icon-ibi-trade-logo"/>
					<param name="sprite" value="site-sprite.svg"/>
				</cms:template>
			</cms:desktop>

			<!-- Generic header for mobile -->
			<cms:mobile>
				<cms:template file="stock/header_generic.xml">
					<param name="logo_sprite_icon" value="icon-ibi-trade-logo"/>
					<param name="sprite" value="site-sprite.svg"/>
					<param name="mobile_menu_sprite_icon" value="icon-menu"/>
					<param name="menu" value="parts/menu_items.xml"/>
					<param name="fixed" value=""/>
				</cms:template>
			</cms:mobile>

			<!-- Main section -->
			<section id="open_account">
				<!-- Main article with title -->
				<cms:module
					name="articles"
					action="show"
					text_id="account_open_section"
					template="stock/article_generic.xml"
					/>

				<!-- outside URL link -->
				<a href="http://ibi.mywizsupport.com/tofes/" class="account">
					<cms:text constant="link_account_open" />
				</a>

				<!-- Second article on main section -->
				<cms:module
					name="articles"
					action="show"
					text_id="account_open_second"
					template="stock/article_generic.xml"
					/>
			</section>

			<!-- Features -->
			<div id="features">
				<h2><cms:text constant="how_to_sign_in" /></h2>

				<!-- Outside URL link -->
				<a href="http://ibi.mywizsupport.com/tofes/" class="account">
					<cms:text constant="link_account_open" />
				</a>

				<ul>
					<cms:module
						name="articles"
						action="show_list"
						group="features"
						template="parts/features.xml"
						>
					</cms:module>
				</ul>
			</div>

			<!-- Benefits -->
			<section id="benefits">
				<h1><cms:text constant="benefits_title" /></h1>
				<cms:module
					name="articles"
					action="show_list"
					group="benefits"
					template="stock/article_generic.xml"
					>
					<param name="title" value=""/>
					<param name="title_tag" value="h3"/>
				</cms:module>

				<!-- Services for desktop -->
				<cms:desktop>
					<div class="services">
						<cms:module
							name="articles"
							action="show"
							text_id="services"
							template="stock/article_generic.xml"
							>
							<param name="title_tag" value="h2"/>
							<param name="title" value=""/>
						</cms:module>
					</div>
				</cms:desktop>
			</section>

			<!-- Services for mobile -->
			<cms:mobile>
				<div class="services">
					<cms:module
						name="articles"
						action="show"
						text_id="services"
						template="stock/article_generic.xml"
						>
						<param name="title_tag" value="h2"/>
						<param name="title" value=""/>
					</cms:module>
				</div>
			</cms:mobile>

			<!-- Why IBI -->
			<section id="why_ibi">
				<cms:module
					name="articles"
					action="show"
					text_id="why"
					template="stock/article_generic.xml"
					>
					<param name="title_tag" value="h1"/>
					<param name="title" value=""/>
				</cms:module>

				<!-- Outside URL link -->
				<a href="http://ibi.mywizsupport.com/tofes/">
					<cms:text constant="link_account_open"/>
				</a>
			</section>

			<!-- IBI Footer -->
			<section id="footer">
				<!-- Footer article -->
				<cms:module
					name="articles"
					action="show"
					text_id="footer_article"
					template="stock/article_generic.xml"
					>
					<param name="title_tag" value="h1"/>
					<param name="title" value=""/>
				</cms:module>

				<!-- Logo text and account link -->
				<div class="footer_information">
					<a href="#">
						<cms:svg file="site-sprite" symbol="icon-ibi-trade-logo"/>
					</a>

					<h3><cms:text constant="why_open" /></h3>

					<a href="http://ibi.mywizsupport.com/tofes/">
						<cms:text constant="link_account_open" />
					</a>
				</div>
			</section>

			<footer>
				<cms:template file="stock/copyright.xml">
					<param name="holder" value="copyright_holder"/>
					<param name="text" value="copyright_text"/>
					<param name="light" value=""/>
				</cms:template>
			</footer>
		</body>
	</html>
</document>
